{
  "compilerOptions": {"noImplicitThis": true,
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"       
    ],
    "skipLibCheck": false,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": { 
      //"atc.ink.spa*": ["./lib/"],   
      "@lib": ["./lib/"]
    }
  },
  "include": [
    "src","src/*.d.ts","lib/*.ts","lib/*.d.ts","lib/**/*.ts","lib/**/*.d.ts"
  ],
 
}